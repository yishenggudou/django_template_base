{% extends "base_bootstrp.html" %}

{% block head_js %}
<script src="/static/js/underscore-min.js"></script>
<script src="/static/js/jquery.min.js"></script>
<script src="/static/js/registion.js"></script>
{% endblock %}

{% block body_content %}
<div id="cform">
<form class="well" method="post">
<div class="control-group {% if form.e_invitecode %}error{% endif %}">
  <label>邀请码</label>
  <input type="text" name="invitecode" class="span3" placeholder="...." value="{{form.invitecode}}">
  <span class="help-inline">{{form.msg_invitecode}}</span>
</div>
<div class="control-group {% if form.name_ %}error{% endif %}">
  <label>用户名</label>
  <input type="text" name="name" class="span3" placeholder="...." value="{{form.name}}">
  <span class="help-inline">输入你的用户名</span>
</div>
<div class="control-group {% if form.e_email %}error{% endif %}">
  <label>邮箱地址</label>
  <input type="text" name="email" class="span3" placeholder="example@example.com" value="{{form.email}}">
  <span class="help-inline">{{form.email_msg}}</span>
</div>
<div class="control-group">
  <label>密码</label>
  <input type="password" name="password" class="span3" placeholder="*********" value="{{form.password}}">
  <span class="help-inline">{{form.password_msg}}</span>
</div>
<div class="control-group">
  <label> 确认密码</label>
  <input type="password" name="repassword" class="span3" placeholder="*********" value="{{form.password}}">
  <span class="help-inline">确认密码</span>
</div>
<div class="control-group">
  <label></label>
  <button type="submit" class="btn">提交</button>
</form>
</div>
{% endblock %}


